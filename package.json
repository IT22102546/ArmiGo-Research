{
  "name": "learnup-platform",
  "version": "1.0.0",
  "private": true,
  "description": "LearnUp Platform - A comprehensive learning management system",
  "author": "LearnApp Team",
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "pnpm --filter @learnup/backend db:generate && husky install",
    "prepare": "husky install",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=@learnup/backend",
    "build:frontend": "turbo run build --filter=learnup-frontend",
    "dev": "turbo run dev --parallel",
    "dev:backend": "turbo run dev --filter=@learnup/backend",
    "dev:frontend": "turbo run dev --filter=learnup-frontend",
    "start": "pnpm -r start",
    "start:backend": "pnpm --filter @learnup/backend start:prod",
    "start:frontend": "pnpm --filter learnup-frontend start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "type-check": "turbo run type-check",
    "db:generate": "pnpm --filter @learnup/backend db:generate",
    "db:push": "pnpm --filter @learnup/backend db:push",
    "db:migrate": "pnpm --filter @learnup/backend db:migrate",
    "db:migrate:deploy": "pnpm --filter @learnup/backend prisma migrate deploy",
    "db:migrate:reset": "pnpm --filter @learnup/backend prisma migrate reset",
    "db:studio": "pnpm --filter @learnup/backend db:studio",
    "db:seed": "pnpm --filter @learnup/backend db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "validate": "pnpm run format:check && pnpm run lint && pnpm run type-check",
    "setup:validate": "node scripts/validate-setup.js"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.1.3",
    "turbo": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.19.0"
}