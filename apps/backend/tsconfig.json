{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* Module & Target */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* Output */
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true,

    /* Decorators (NestJS / TypeORM / Prisma helpers) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Project References */
    "composite": true,
    "incremental": true,

    /* Type Safety */
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,

    /* Code Quality */
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Performance */
    "skipLibCheck": true,

    /* TS 5 */
    "ignoreDeprecations": "5.0",

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@common/*": ["common/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
      "@infrastructure/*": ["infrastructure/*"],

      "@learnup/shared": ["../../packages/shared/src"],
      "@learnup/shared/*": ["../../packages/shared/src/*"]
    }
  },

  "include": ["src"],

  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "coverage"
  ],

  "references": [{ "path": "../../packages/shared" }]
}
